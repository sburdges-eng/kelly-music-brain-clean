{
  "name": "Kelly Music Brain 2.0 Development",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  
  "features": {
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "upgradePackages": true
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "charliermarsh.ruff",
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "twxs.cmake",
        "eamodio.gitlens",
        "gruntfuggly.todo-tree",
        "yzhang.markdown-all-in-one",
        "donjayamanne.githistory",
        "github.copilot",
        "github.copilot-chat"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.ruffEnabled": true,
        "python.formatting.provider": "black",
        "python.testing.pytestEnabled": true,
        "python.testing.pytestArgs": ["tests/python"],
        "editor.formatOnSave": true,
        "editor.rulers": [100],
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "cmake.configureOnOpen": false,
        "todo-tree.general.tags": ["TODO", "FIXME", "HACK", "XXX", "NOTE"],
        "git.autofetch": true
      }
    }
  },

  "forwardPorts": [3000, 8000, 8080],

  "postCreateCommand": "bash .devcontainer/post-create.sh",

  "remoteUser": "vscode",

  "mounts": [
    "source=${localWorkspaceFolder}/.git,target=/workspace/.git,type=bind,consistency=cached"
  ],

  "containerEnv": {
    "PYTHONPATH": "/workspace/src:${PYTHONPATH}",
    "CMAKE_PREFIX_PATH": "/usr/local/qt6",
    "PKG_CONFIG_PATH": "/usr/local/lib/pkgconfig"
  }
}
