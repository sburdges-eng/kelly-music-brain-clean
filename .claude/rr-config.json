{
  "name": "RR CLI Tool",
  "description": "Git + OpenAI integrated CLI for Claude Code",
  "version": "1.0.0",
  "commands": {
    "git": {
      "status": {
        "description": "Show repository status",
        "command": "rr git status"
      },
      "log": {
        "description": "View recent commits",
        "command": "rr git log --count 5"
      },
      "diff": {
        "description": "Show changes",
        "command": "rr git diff"
      }
    },
    "ai": {
      "commit-msg": {
        "description": "Generate AI commit message",
        "command": "rr ai commit-msg --staged"
      },
      "analyze": {
        "description": "Analyze code with AI",
        "command": "rr ai analyze"
      },
      "suggest": {
        "description": "Get improvement suggestions",
        "command": "rr ai suggest"
      },
      "explain": {
        "description": "Learn programming concepts",
        "command": "rr ai explain"
      },
      "ask": {
        "description": "Ask general questions",
        "command": "rr ai ask"
      }
    }
  },
  "setup": {
    "install": "pip install -e /Volumes/Extreme\\ SSD/kelly-project/rr_cli",
    "environment": {
      "OPENAI_API_KEY": "Required for AI features"
    }
  },
  "aliases": {
    "/rr-commit": "rr ai commit-msg --staged",
    "/rr-status": "rr git status",
    "/rr-analyze": "rr ai analyze",
    "/rr-suggest": "rr ai suggest",
    "/rr-explain": "rr ai explain",
    "/rr-ask": "rr ai ask"
  }
}
